# Production deployment environment variables
# Use this for actual deployed production environments
NODE_ENV=production

# Production server configuration for deployment
PORT=5000
HOST=0.0.0.0

# Disable development features
DEBUG=false
HOT_RELOAD=false

# Production API URLs (change these to your actual production URLs)
VITE_API_BASE_URL=https://your-production-domain.com

# Production database
# DATABASE_URL=your_production_database_url

# Production session configuration (CHANGE THIS!)
SESSION_SECRET=your_very_secure_session_secret_here

# Production logging
LOG_LEVEL=info

# Security settings
SECURE_COOKIES=true
TRUST_PROXY=true